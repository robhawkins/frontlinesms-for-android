<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/global_top_background"
        android:padding="0.0dp"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:onClick="goHome"
        android:layout_height="@dimen/actionbar_height">

    <ImageView
            android:id="@+id/actionbar_logo"
            android:tag="Logo/Home"
            android:layout_centerVertical="true"
            android:visibility="gone"
            style="@style/ActionBar.Logo"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|right"
            android:layout_gravity="center_vertical|right"
            android:layout_alignParentRight="true">

        <TextView
                android:id="@+id/actionbar_text"
                style="@style/ActionBar.Text"
                android:visibility="gone"
                android:text="114"/>

        <ImageView
                android:id="@+id/actionbar_seperator_1"
                android:visibility="gone"
                style="@style/ActionBar.Seperator" />

        <ProgressBar
            android:id="@+id/actionbar_progress"
            android:visibility="gone"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_width="25dp"
            
            style="@style/ActionBar.ProgressBar"
            />
        <!--style="@style/ActionBar.ProgressBar" -->
        <!--style="@style/customProgressBar"-->

        <ImageButton
                android:id="@+id/actionbar_button_1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@+id/img_search"
                android:nextFocusRight="@+id/img_groups"
                android:visibility="gone"
                android:src="@drawable/actionbar_ic_refresh"
                android:tag="Refresh"
                style="@style/ActionBar.ActionButton"/>

        <ImageView
                android:id="@+id/actionbar_seperator_2"
                android:visibility="gone"
                style="@style/ActionBar.Seperator" />

        <ImageButton
                android:id="@+id/actionbar_button_2"
                android:src="@drawable/global_search_icon"
                android:tag="Tweet"
                android:visibility="gone"
                style="@style/ActionBar.ActionButton" />

        <ImageView
                android:id="@+id/actionbar_seperator_3"
                android:visibility="gone"
                style="@style/ActionBar.Seperator"/>

        <ImageButton
                android:id="@+id/actionbar_button_3"
                android:src="@drawable/global_search_icon"
                android:tag="Search"
                android:visibility="gone"
                style="@style/ActionBar.ActionButton" />


    </LinearLayout>

</RelativeLayout>
