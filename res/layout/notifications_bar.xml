<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/notifications_bar"
        android:focusable="true"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

    <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/notifications_bar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notifications_panel_icon_gray"
                android:scaleType="center" />

        <LinearLayout
                android:gravity="center"
                android:id="@+id/notifications_bar_badge"
                android:background="@drawable/notification_badge"
                android:paddingTop="0.0dip"
                android:paddingBottom="3.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16.0dip"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:id="@+id/notifications_bar_badge_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

        </LinearLayout>

        <TextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="Notifications"
                android:shadowColor="#7f000000"
                android:shadowDx="0.0"
                android:shadowDy="-1.0"
                android:shadowRadius="1.0" />

    </LinearLayout>
</LinearLayout>